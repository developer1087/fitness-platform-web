rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Trainers can read and write their own trainees
    // Trainees can also update their own record when accepting invitations
    match /trainees/{traineeId} {
      allow read, write: if request.auth != null &&
        (resource == null ||
         resource.data.trainerId == request.auth.uid ||
         resource.data.userId == request.auth.uid ||
         request.resource.data.trainerId == request.auth.uid ||
         request.resource.data.userId == request.auth.uid);
    }

    // Trainee invitations - allow trainers to manage their invitations
    // Allow trainees to accept their own invitations
    match /trainee_invitations/{invitationId} {
      allow read, write: if request.auth != null &&
        (resource == null || resource.data.trainerId == request.auth.uid ||
         request.resource.data.trainerId == request.auth.uid);
      // Allow reading invitations by token for signup process
      allow read: if resource != null && resource.data.inviteToken != null;
      // Allow trainees to accept invitations (update status to accepted)
      allow write: if request.auth != null && resource != null &&
        request.resource.data.status == 'accepted' &&
        resource.data.status == 'pending';
    }

    // Sessions - trainer and trainee specific data
    match /training_sessions/{sessionId} {
      allow read, write: if request.auth != null &&
        (resource == null ||
         resource.data.trainerId == request.auth.uid ||
         resource.data.traineeId == request.auth.uid ||
         request.resource.data.trainerId == request.auth.uid ||
         request.resource.data.traineeId == request.auth.uid);
    }

    // Sessions collection (used by SessionService)
    match /sessions/{sessionId} {
      // Allow reading individual documents if user is trainer or trainee
      allow get: if request.auth != null &&
        (resource.data.trainerId == request.auth.uid ||
         resource.data.traineeId == request.auth.uid);

      // Allow listing (queries) - Firestore will filter to only matching docs
      allow list: if request.auth != null;

      // Allow creating sessions if user is the trainer
      allow create: if request.auth != null &&
        request.resource.data.trainerId == request.auth.uid;

      // Allow updating/deleting if user is trainer or trainee
      allow update, delete: if request.auth != null &&
        (resource.data.trainerId == request.auth.uid ||
         resource.data.traineeId == request.auth.uid);
    }

    // Schedule collections - trainer specific
    match /availability_slots/{slotId} {
      allow read, write: if request.auth != null &&
        (resource == null || resource.data.trainerId == request.auth.uid ||
         request.resource.data.trainerId == request.auth.uid);
    }

    match /booking_slots/{slotId} {
      allow read, write: if request.auth != null &&
        (resource == null ||
         resource.data.trainerId == request.auth.uid ||
         resource.data.traineeId == request.auth.uid ||
         request.resource.data.trainerId == request.auth.uid ||
         request.resource.data.traineeId == request.auth.uid);
    }

    match /recurring_bookings/{bookingId} {
      allow read, write: if request.auth != null &&
        (resource == null ||
         resource.data.trainerId == request.auth.uid ||
         resource.data.traineeId == request.auth.uid ||
         request.resource.data.trainerId == request.auth.uid ||
         request.resource.data.traineeId == request.auth.uid);
    }

    // Payment collections - trainer specific
    match /payment_accounts/{accountId} {
      allow read, write: if request.auth != null &&
        (resource == null || resource.data.trainerId == request.auth.uid ||
         request.resource.data.trainerId == request.auth.uid);
    }

    match /invoices/{invoiceId} {
      allow read, write: if request.auth != null &&
        (resource == null ||
         resource.data.trainerId == request.auth.uid ||
         resource.data.traineeId == request.auth.uid ||
         request.resource.data.trainerId == request.auth.uid ||
         request.resource.data.traineeId == request.auth.uid);
    }

    match /payments/{paymentId} {
      allow read, write: if request.auth != null &&
        (resource == null ||
         resource.data.trainerId == request.auth.uid ||
         resource.data.traineeId == request.auth.uid ||
         request.resource.data.trainerId == request.auth.uid ||
         request.resource.data.traineeId == request.auth.uid);
    }

    // Packages and trainee packages
    match /packages/{packageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (resource == null || resource.data.trainerId == request.auth.uid ||
         request.resource.data.trainerId == request.auth.uid);
    }

    match /trainee_packages/{packageId} {
      allow read, write: if request.auth != null &&
        (resource == null ||
         resource.data.trainerId == request.auth.uid ||
         resource.data.traineeId == request.auth.uid ||
         request.resource.data.trainerId == request.auth.uid ||
         request.resource.data.traineeId == request.auth.uid);
    }

    // Transactions - for audit trail
    match /transactions/{transactionId} {
      allow read: if request.auth != null &&
        (resource == null ||
         resource.data.trainerId == request.auth.uid ||
         resource.data.traineeId == request.auth.uid);
      allow write: if request.auth != null &&
        (request.resource.data.trainerId == request.auth.uid ||
         request.resource.data.traineeId == request.auth.uid);
    }

    match /payment_methods/{methodId} {
      allow read, write: if request.auth != null &&
        (resource == null || resource.data.userId == request.auth.uid ||
         request.resource.data.userId == request.auth.uid);
    }

    match /financial_reports/{reportId} {
      allow read, write: if request.auth != null &&
        (resource == null || resource.data.trainerId == request.auth.uid ||
         request.resource.data.trainerId == request.auth.uid);
    }

    // Session templates and personal records - trainer specific
    match /session_templates/{templateId} {
      allow read, write: if request.auth != null &&
        (resource == null || resource.data.trainerId == request.auth.uid ||
         request.resource.data.trainerId == request.auth.uid);
    }

    match /personal_records/{recordId} {
      allow read, write: if request.auth != null &&
        (resource == null ||
         resource.data.trainerId == request.auth.uid ||
         resource.data.traineeId == request.auth.uid ||
         request.resource.data.trainerId == request.auth.uid ||
         request.resource.data.traineeId == request.auth.uid);
    }

    // Exercises - allow read for all authenticated users, write for trainers
    match /exercises/{exerciseId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        (resource == null || resource.data.trainerId == request.auth.uid ||
         request.resource.data.trainerId == request.auth.uid);
    }

    // Default deny all other requests
    match /{document=**} {
      allow read, write: if false;
    }
  }
}